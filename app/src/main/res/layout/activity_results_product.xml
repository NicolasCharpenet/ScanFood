<?xml version="1.0" encoding="utf-8"?>

<!-- affichage en scroll view des informations du produit en mettant en commentaire la partie de l'image
qui s'affiche en haut-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_favoris"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/logo_etoile" />

       <!-- <ImageView
            android:id="@+id/image_imageView"
            android:layout_width="match_parent"
            android:layout_height="90dp"/> -->
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nom du produit"
            android:gravity="center"/>

        <TextView
        android:id="@+id/name_textview"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Marque du produit"
            android:gravity="center"/>

        <TextView
        android:id="@+id/brand_textView"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nutriscore"
            android:gravity="center"/>
        <TextView
        android:id="@+id/nutriscore_textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Catégories relatives"
            android:gravity="center"/>
    <TextView
        android:id="@+id/categories_textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ingrédients du produit"
            android:gravity="center"/>
    <TextView
        android:id="@+id/ingredients_TextView"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>


    </LinearLayout>
</ScrollView>


